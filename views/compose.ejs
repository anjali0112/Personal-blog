<%-include("partials/header")%>
<h1>Compose</h1>
<div class="container">
	<form action="/compose" method="post">
		
		<div class="form-group">
			<label>Title:</label>
			<input class="form-control" type="text" name="title" autocomplete="off">
		</div>
		<div class="form-group">
			<label>Post:</label>
			<textarea class="form-control" name="post" rows="5"></textarea>
		</div>
		
		<button class="btn-primary btn-lg" type="submit">Publish</button>
	</form>
</div>
<%-include("partials/footer")%>